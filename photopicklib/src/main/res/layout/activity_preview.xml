<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:background="#000"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/mTop"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/mBreak"
            android:layout_width="wrap_content"
            android:text="@string/photo"
            android:drawableStart="@drawable/ic_chevron_left_black_24dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/mShowNum"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mSelect"
            android:layout_width="20dp"
            android:text=""
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/image_select_no"
            android:layout_height="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mBottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" >

        <TextView
            android:id="@+id/mSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sure_select"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/send"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff" />
    </RelativeLayout>

</RelativeLayout>